<h2>ðŸ“š Borrow a Book</h2>

<form method="POST">
  {{ csrfInput() }}
  <input type="hidden" name="action" value="entries/save-entry">
  <input type="hidden" name="sectionId" value="{{ craft.sections.getSectionByHandle('borrowRecords').id }}">

  <label>Customer:</label>
  <select name="fields[borrower]">
    {% for customer in craft.entries.section('customers').all() %}
      <option value="{{ customer.id }}">{{ customer.title }}</option>
    {% endfor %}
  </select><br>

  <label>Book:</label>
  <select name="fields[borrowedBook]">
    {% for book in craft.entries.section('book').all() %}
      {% set isBorrowed = book.isBorrowed ?? false %}
      {% if not isBorrowed %}
        <option value="{{ book.id }}">{{ book.title }}</option>
      {% endif %}
    {% endfor %}
  </select><br>

  <input type="hidden" name="fields[borrowDate]" value="{{ now|date('Y-m-d H:i:s') }}">

  <button type="submit">Borrow Book</button>
</form>
