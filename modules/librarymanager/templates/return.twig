{% extends "_layouts/cp" %}
{% set title = "ğŸ“¤ Return Book" %}

{% block content %}
	<h2 class="heading">ğŸ“¤ Return Book</h2>

	{% if craft.app.request.getParam('success') %}
		<p class="notice">âœ… Book marked as returned!</p>
	{% endif %}

	<div class="pane">
		<h3>ğŸ• Pending Returns</h3>

		{% if borrowEntries|length %}
			<table class="data fullwidth">
				<thead>
					<tr>
						<th>ğŸ‘¤ Customer</th>
						<th>ğŸ“˜ Book</th>
						<th>ğŸ“… Borrow Date</th>
						<th>âœ… Return</th>
					</tr>
				</thead>
				<tbody>
					{% for entry in borrowEntries %}
						{% set book = entry.borrowedBook.one() %}
						{% set borrower = entry.borrower.one() %}

						<tr>
							<td>{{ borrower ? borrower.title : 'Unknown' }}</td>
							<td>{{ book ? (book.bookTitle ?? book.title) : 'Unknown' }}</td>
							<td>{{ entry.borrowDate|date('Y-m-d') }}</td>
							<td>
								{% if book and borrower %}
									<form method="POST" action="{{ url('librarymanager/mark-returned') }}">
										{{ csrfInput() }}
										<input type="hidden" name="elementId" value="{{ entry.id }}">
										<input type="hidden" name="returnDate" value="{{ now|date('Y-m-d H:i:s') }}">
										<button type="submit" class="btn small">âœ… Mark Returned</button>
									</form>
								{% else %}
									<span style="color: red;">âš  Invalid Borrow Record</span>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			{% if totalPages > 1 %}
				<div class="pagination">
					<ul class="flex" style="gap: 6px;">
						{% if currentPage > 1 %}
							<li>
								<a class="btn" href="?page={{ currentPage - 1 }}&historyPage={{ currentHistoryPage }}">Â« Prev</a>
							</li>
						{% endif %}
						{% for i in 1..totalPages %}
							<li>
								{% if i == currentPage %}
									<span class="btn submit disabled">{{ i }}</span>
								{% else %}
									<a class="btn" href="?page={{ i }}&historyPage={{ currentHistoryPage }}">{{ i }}</a>
								{% endif %}
							</li>
						{% endfor %}
						{% if currentPage < totalPages %}
							<li>
								<a class="btn" href="?page={{ currentPage + 1 }}&historyPage={{ currentHistoryPage }}">Next Â»</a>
							</li>
						{% endif %}
					</ul>
				</div>
			{% endif %}
		{% else %}
			<p>No pending returns.</p>
		{% endif %}
	</div>

	<br>

	<div class="pane">
		<h3>ğŸ“‹ Borrow History</h3>

		{% if borrowHistory|length %}
			<table class="data fullwidth">
				<thead>
					<tr>
						<th>ğŸ‘¤ Customer</th>
						<th>ğŸ“˜ Book</th>
						<th>ğŸ“… Borrow Date</th>
						<th>ğŸ“… Return Date</th>
					</tr>
				</thead>
				<tbody>
					{% for entry in borrowHistory %}
						{% set borrower = entry.borrower.one() %}
						{% set book = entry.borrowedBook.one() %}
						<tr>
							<td>{{ borrower ? borrower.title : 'Unknown' }}</td>
							<td>{{ book ? (book.bookTitle ?? book.title) : 'Unknown' }}</td>
							<td>{{ entry.borrowDate|date('Y-m-d') }}</td>
							<td>
								{% if entry.returnDate %}
									{{ entry.returnDate|date('Y-m-d') }}
								{% else %}
									<span class="error">Not Returned</span>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			{% if historyPages > 1 %}
				<div class="pagination">
					<ul class="flex" style="gap: 6px;">
						{% if currentHistoryPage > 1 %}
							<li>
								<a class="btn" href="?historyPage={{ currentHistoryPage - 1 }}&page={{ currentPage }}">Â« Prev</a>
							</li>
						{% endif %}
						{% for i in 1..historyPages %}
							<li>
								{% if i == currentHistoryPage %}
									<span class="btn submit disabled">{{ i }}</span>
								{% else %}
									<a class="btn" href="?historyPage={{ i }}&page={{ currentPage }}">{{ i }}</a>
								{% endif %}
							</li>
						{% endfor %}
						{% if currentHistoryPage < historyPages %}
							<li>
								<a class="btn" href="?historyPage={{ currentHistoryPage + 1 }}&page={{ currentPage }}">Next Â»</a>
							</li>
						{% endif %}
					</ul>
				</div>
			{% endif %}
		{% else %}
			<p>No history records.</p>
		{% endif %}
	</div>
{% endblock %}
